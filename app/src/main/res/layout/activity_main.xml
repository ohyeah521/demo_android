<?xml version="1.0" encoding="utf-8"?>
<com.skeeter.demo.view.CustomLinearLayout
    android:id="@+id/act_main_container_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.skeeter.demo.MainActivity">

    <com.skeeter.demo.view.CustomTextView
        android:id="@+id/act_main_view_testclick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/default_textview_bkg"
        android:padding="5dp"
        android:text="验证View isClickable 其也会默认消耗掉longClick事件"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_dark">

        <TextView
            android:id="@+id/main_rl_view1"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:background="@android:color/black"
            android:text="view1"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/main_rl_view2"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginLeft="100dp"
            android:background="@android:color/black"
            android:text="view2"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/main_rl_view3"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_alignWithParentIfMissing="false"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/main_rl_view2"
            android:background="@android:color/black"
            android:text="view3"
            android:textColor="@android:color/white"/>

    </RelativeLayout>

    <include
        layout="@layout/layout_relativelayout"/>

    <TextView
        android:id="@+id/act_main_view_goto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/default_textview_bkg"
        android:padding="5dp"
        android:text="页面跳转"/>

    <TextView
        android:id="@+id/act_main_view_broadcast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/default_textview_bkg"
        android:padding="5dp"
        android:text="发送广播"/>

</com.skeeter.demo.view.CustomLinearLayout>
